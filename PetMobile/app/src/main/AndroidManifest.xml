<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trk.petmobile">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignActivity"
            android:label="Giriş"/>
        <activity
            android:name=".PetInfoActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Genel Bilgi" />
        <activity
            android:name=".RegisterActivity"
            android:label="Kayıt" />
        <activity
            android:name=".VaccineActvity"
            android:label="Aşı" />
        <activity
            android:name=".ThreatmentActivity"
            android:label="Tedavi" />
        <activity
            android:name=".AppointmentActivity"
            android:label="Randevu" />
        <activity
            android:name=".AllVaccineActivity"
            android:label="Aşı Geçmişi"/>
        <activity
            android:name=".AllAppointmentActivity"
            android:label="Randevu Geçmişi"/>
        <activity
            android:name=".AllThreatmentActivity"
            android:label="Tedavi Geçmişi"/>
        <activity
            android:name=".AskActivity"
            android:label="Soru Sor"/>
        <activity
            android:name=".MenuActivity"
            android:label="Ana Menü"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>